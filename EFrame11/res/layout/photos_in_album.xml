<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="#ffffff">

	
	<LinearLayout
  	 	android:id="@+id/text"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:gravity="center_vertical|center_horizontal"
       	android:background="@drawable/header_p">
       	
       	<TextView
  		android:id="@+id/album_name"
  		android:typeface="serif"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		
  		android:textColor="#ffffff"
  		android:textStyle="bold"
  		/>  	
       	
  	</LinearLayout>
  	
  	<TextView
  				android:id="@+id/t1"
  				android:layout_width="wrap_content"
  				android:layout_height="2px"
  		  		/>  
  		 <TextView
  				android:id="@+id/t2"
  				android:layout_width="10px"
  				android:layout_height="wrap_content"
  		  		/> 
  	
  		<Button
  		 android:layout_below="@id/t1"
  		  android:layout_toRightOf="@id/t2"
          android:id="@+id/back"
       	  android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="  Back"
          android:typeface="serif"
          android:drawableLeft="@drawable/back" />
		
      	
  
	<LinearLayout
  	 	android:id="@+id/text1"
  	 	android:layout_below="@id/text"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:paddingTop="30px"
       	>
    </LinearLayout>   	
	<Gallery 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/photogallery"
		android:layout_below="@id/text1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		
		/>
		
		<LinearLayout
  		android:id="@+id/buttonCapsule"
  		android:orientation="horizontal"
       android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_alignParentBottom="true"
      
       >


		<Button 
			android:textColor="#000000"
				android:typeface="serif"
				android:text="  Add  "
          		android:drawableTop="@drawable/add"
			android:id="@+id/addPhotos" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</Button>
		
		
		
		<Button 
				android:id="@+id/slideshow_button" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:typeface="serif"
				android:text="SlideShow"
          		android:drawableTop="@drawable/ss"
				/>
		
		<Button 
			android:textColor="#000000"
			android:typeface="serif"
			android:text="Delete"
          	android:drawableTop="@drawable/delete"
			android:id="@+id/deletePhotos" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</Button>	
	
		
		<Button 
			android:textColor="#000000"
			android:typeface="serif"
			android:text="  Edit  "
          	android:drawableTop="@drawable/edit_d"
			android:id="@+id/edit_album" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</Button>	
 </LinearLayout>
		
		</RelativeLayout>