<ScrollView
    android:id="@+id/widget54"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    
    >
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="#ffffff"
>

	
 <LinearLayout
  	 	android:id="@+id/text"
  	 	android:layout_below="@id/back"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:background="@drawable/header_p"
      	android:gravity="center_vertical|center_horizontal"
      	>
  
  		
		<TextView
  		android:id="@+id/text1"
  		android:text="Mail to Friend"
  		android:typeface="serif"
  		android:textColor="#ffffff"
  		android:textStyle="bold"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		
  		/>  	
      	
  </LinearLayout>
 
 <LinearLayout
  	 	android:layout_below="@id/text"
  		android:id="@+id/buttonCapsule1"
  		android:orientation="horizontal"
  		android:gravity="center_vertical|center_horizontal"
  		android:paddingTop="30px"
       	android:layout_width="fill_parent"
      	android:layout_height="wrap_content">
  
  		<TextView
  		android:id="@+id/text1"
  		android:text="Email Id: "
  		android:typeface="serif"
  		android:textColor="#000000"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		
  		/>  	
		<EditText 
			android:layout_height="wrap_content" 
			android:id="@+id/mailid" 
			android:typeface="serif"
			
			android:layout_width="200px" 
			/>  	  	
      	
    </LinearLayout>
 
  <LinearLayout
  	 	android:layout_below="@id/buttonCapsule1"
  		android:id="@+id/buttonCapsule"
  		android:orientation="horizontal"
  		android:gravity="center_vertical|center_horizontal"
  		android:layout_width="fill_parent"
      	android:layout_height="wrap_content">
  
  		<TextView
  		android:id="@+id/text1"
  		android:text="Password: "
  		android:typeface="serif"
  		android:textColor="#000000"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		
  		/>  	
		<EditText 
			android:layout_height="wrap_content" 
			android:id="@+id/pwd" 
			android:typeface="serif"
			android:password="true"
			android:layout_width="200px" 
			/>  	  	
      	
    </LinearLayout>
    <LinearLayout
  	 	android:layout_below="@id/buttonCapsule"
  		android:id="@+id/buttonCapsule3"
  		android:orientation="horizontal"
  		android:gravity="center_vertical|center_horizontal"
  		android:layout_width="fill_parent"
      	android:layout_height="wrap_content">
  
  		<TextView
  		android:id="@+id/text1"
  		android:text="Mail to: "
  		android:typeface="serif"
  		android:textColor="#000000"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		
  		/>  	
		<EditText 
			android:layout_height="wrap_content" 
			android:id="@+id/mailTo" 
			android:typeface="serif"
			android:layout_width="200px" 
			/>  	  	
      	
    </LinearLayout>

	<LinearLayout
  	 	android:layout_below="@id/buttonCapsule3"
  		android:id="@+id/buttonCapsule2"
  		android:orientation="horizontal"
  		android:paddingTop="20px"
  		android:gravity="center_vertical|center_horizontal"
       	android:layout_width="fill_parent"
      	android:layout_height="wrap_content">
  
			
      	<Button
          android:id="@+id/send"
       	  android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000000"
		  android:typeface="serif"
		  android:text="  Send  "
          android:drawableLeft="@drawable/send"
          />
          
          <Button
		  
          android:id="@+id/back"
       	  android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:textColor="#000000"
		  android:typeface="serif"
		  android:text=" Cancel"
          android:drawableLeft="@drawable/cancel" />
          
          
    </LinearLayout>
	
	
</RelativeLayout>
</ScrollView>